[Interface]
# PrivateKey = <WIREGUARD_PRIVATE_KEY>  # Uncomment and set your private key here
Address = <WIREGUARD_ADDRESSES>          # e.g., 10.0.0.2/24
DNS = 9.9.9.9                             # Can be replaced with a local DNS resolver

# Optional: MTU settings for performance tuning
# MTU = 1420

[Peer]
PublicKey = <WIREGUARD_PUBLIC_KEY>       # Uncomment and set the public key of the server
AllowedIPs = 0.0.0.0/0                    # Allows all traffic; adjust as needed for security
Endpoint = <WIREGUARD_ENDPOINT_IP>:<WIREGUARD_ENDPOINT_PORT>  # Set the server's IP and port

# Optional: Persistent keep-alive
# PersistentKeepalive = 25                  # Set to 25 seconds to keep NAT mappings open (useful for mobile clients)
